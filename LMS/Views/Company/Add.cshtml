@{
    ViewBag.Title = "Add";
}
<div ng-controller="CompanyCtrl" ng-init="AddInit()">
    <div class="col-md-12"><h2>Add Company</h2></div>
    <div class="row">
        <form id="VendorAddForm ">
            <div class="form-group">
                <div class="col-md-3">
                    <label>Name</label>
                    <input type="text" class="form-control" ng-model="Company.Name" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label>Description</label>
                    <input type="text" class="form-control" ng-model="Company.Description" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label>Address</label>
                    <input type="text" class="form-control" ng-model="Company.Address" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label>Email</label>
                    <input type="email" class="form-control" ng-model="Company.Email" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label>Contact</label>
                    <input type="text" class="form-control" ng-model="Company.Contact" />
                </div>
            </div>
        </form>
        <div class="row pull-right">
            <button class="btn btn-primary" ng-click="AddCompany(Company)">Add</button>
        </div>
    </div>
</div>

