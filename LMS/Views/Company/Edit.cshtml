@{
    ViewBag.Title = "Add";
}
<div ng-controller="CompanyCtrl" ng-init="EditInit()">
    <div class="jumbotron PageHeading">
        <div class="row"><div class="col-md-3"><h2>Edit Company</h2></div></div>
    </div>
    <div class="jumbotron PageHeading">
        <div class="row">
            <form id="VendorAddForm ">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Name</label>
                        <input type="text" class="form-control" ng-model="Company.Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Description</label>
                        <input type="text" class="form-control" ng-model="Company.Description" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Address</label>
                        <input type="text" class="form-control" ng-model="Company.Address" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Email</label>
                        <input type="email" class="form-control" ng-model="Company.Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Contact</label>
                        <input type="text" class="form-control" ng-model="Company.Contact" />
                    </div>
                </div>
            </form>
        </div>
        <div class="row float-right">
            <button class="btn btn-primary" ng-click="EditCompany(Company)">Save Changes</button>
        </div>
    </div>

</div>