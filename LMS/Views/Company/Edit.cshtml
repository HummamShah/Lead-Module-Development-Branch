@{
    ViewBag.Title = "Add";
}
<div ng-controller="CompanyCtrl" ng-init="EditInit()">
    <div class="jumbotron PageHeading">
        <div class="row"><div class="col-md-3"><h2>Edit Company</h2></div></div>
    </div>
    <div class="jumbotron PageHeading">
        <div class="row">
            <form id="VendorAddForm ">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Name</label>
                        <input type="text" class="form-control" ng-model="Company.Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Description</label>
                        <input type="text" class="form-control" ng-model="Company.Description" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Address</label>
                        <input type="text" class="form-control" ng-model="Company.Address" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Email</label>
                        <input type="email" class="form-control" ng-model="Company.Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Contact</label>
                        <input type="text" class="form-control" ng-model="Company.Contact" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Is Branch</label>
                        <input type="checkbox" class="" ng-model="Company.IsBranch" />
                    </div>
                </div>
                <div class="form-group" ng-if="Company.IsBranch">
                    <div class="col-md-3">
                        <label>Parent Company</label>
                        <select ng-model="ParentCompanyId" class="form-control" ng-change="GetThisConsole(ParentCompanyId)">
                            <option selected value="">Select Parent Company</option>
                            <option ng-repeat="Company in Companies" value="{{Company.Id}}" ng-selected="ParentCompanyId == Company.Id">{{Company.Name}}</option>
                        </select>
                    </div>
                </div>
            </form>
        </div>
        <div class="row float-right">
            <button class="btn btn-primary" ng-click="EditCompany(Company)">Save Changes</button>
        </div>
    </div>

</div>