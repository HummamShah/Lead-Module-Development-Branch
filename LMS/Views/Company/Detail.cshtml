@{
    ViewBag.Title = "Add";
}
<div ng-controller="CompanyCtrl" ng-init="EditInit()">
    <div class="jumbotron PageHeading">
        <div class="row"><div class="col-md-3"><h2>Company Details</h2></div></div>
    </div>
    <div class="jumbotron PageHeading">
        <div class="row">
            <form id="VendorAddForm ">
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Name</label>
                        <input type="text" readonly class="form-control" ng-model="Company.Name" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Description</label>
                        <input type="text" readonly class="form-control" ng-model="Company.Description" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Address</label>
                        <input type="text" readonly class="form-control" ng-model="Company.Address" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Email</label>
                        <input type="email" readonly class="form-control" ng-model="Company.Email" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Contact</label>
                        <input type="text" readonly class="form-control" ng-model="Company.Contact" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Last Updated By</label>
                        <input type="text" readonly class="form-control" ng-model="Company.UpdatedBy" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        <label>Last Updated On</label>
                        <input type="date" readonly class="form-control" ng-model="Company.UpdatedAt" />
                    </div>
                </div>
            </form>
        </div>
        <div class="row float-right">
            <a class="btn btn-primary" href="/Company">Cancel</a>
        </div>
    </div>
</div>