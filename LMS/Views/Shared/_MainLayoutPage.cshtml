@using Microsoft.AspNet.Identity;
@using UserRoles = LMS.Models.Enums.Roles;
<!DOCTYPE html>
<html ng-app="LmsApp">
<head>
    <title>@ViewBag.Title - LMS &#64 SharpTel</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="~/Content/js/Jquery.min.js"></script>
    @*<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">*@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
</head>
<body ng-controller="baseCtrl">
    <div class="wrapper">
        <nav class="" id="sidebar">
            <div class="sidebar-header">
                <h3 style=" padding-left: 9px;">SharpTel</h3>
            </div>
            <ul class="lisst-unstyled components" style="padding-top: 2px;">
                <li class="active">
                    <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Home<b class="caret NavbarLink"></b></a>
                    <ul class="collapse list-unstyled" id="homeSubmenu">
                        <li>
                            <a href="/About">About</a>
                        </li>
                        <li>
                            <a href="/Contact">Contact</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="/Vendor"> Vendor <i class="fas fa-caret-right NavbarLink"></i></a>
                </li>
                <li>
                    <a href="/Company"> Company <i class="fas fa-caret-right NavbarLink"></i></a>
                </li>
                @if (User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.SuperAdmin))
                {
                    <li>
                        <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">User <b class="caret NavbarLink"></b></a>
                        <ul class="collapse list-unstyled" id="pageSubmenu">
                            @if (User.IsInRole(UserRoles.SuperAdmin))
                            {
                                <li>
                                    <a href="/User/AddAdmin">Add Admin</a>
                                </li>
                            }
                            @if (User.IsInRole(UserRoles.Admin))
                            {
                                <li>
                                    <a href="/User/Add">Add User</a>
                                </li>
                            }

                            <li>
                                <a href="/User/">Users</a>
                            </li>
                        </ul>
                    </li>
                }

            </ul>
        </nav>


        <div id="content">
            <nav class=" navbar-expand-lg navbar-light header HeaderMenu">
                <div class="">
                    <div class="padding-t-12">
                        <button type="button" id="sidebarCollapse" class="btn  btn-info">
                            <i class="fas fa-align-left"></i>
                            <span></span>
                        </button>
                        <div class="LayoutProfile">
                            @Html.Partial("_LoginPartial")
                        </div>
                    </div>

                </div>
            </nav>
            <div class="container body-content">
                @RenderBody()
                @*<hr />*@
                <footer class="navbar-fixed-bottom  MainFooter">
                    <p>&copy; @DateTime.Now.Year - LMS@Sharptel</p>
                </footer>
            </div>
        </div>
    </div>

    @*<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>*@

    <script src="~/Content/js/jquery.min.js"></script>
    <script src="~/Content/js/angular.min.js"></script>
    <script src="~/Content/js/AngularCtrl.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)



    <script>

        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
            });
        });

    </script>


</body>
</html>