@{
    ViewBag.Title = "Add";
}
<div ng-controller="VendorCtrl" ng-init="AddInit()">
    <div class="col-md-12"><h2>Add Vendor</h2></div>
    <div class="row">
        <form id="VendorAddForm ">
            <div class="form-group">
                <div class="col-md-3">
                    <label>Name</label>
                    <input type="text" class="form-control" ng-model="Vendor.Name" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <label>Description</label>
                    <input type="text" class="form-control" ng-model="Vendor.Description" />
                </div>
            </div>
        </form>
        <div class="row pull-right">
            <button class="btn btn-primary" ng-click="AddVendor(Vendor)">Add</button>
        </div>
    </div>
</div>

